<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:NFCRing.UI.View.Views"
                    xmlns:viewModel="clr-namespace:NFCRing.UI.ViewModel;assembly=NFCRing.UI.ViewModel">
    <DataTemplate DataType="{x:Type viewModel:WizardViewModel}">
        <views:WizardView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type viewModel:HelloStepViewModel}">
        <views:HelloStepView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type viewModel:PlaceRingStepViewModel}">
        <views:PlaceRingStepView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type viewModel:RemoveRingStepViewModel}">
        <views:RemoveRingStepView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type viewModel:SuccessfullyStepViewModel}">
        <views:SuccessfullyStepView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type viewModel:LoginStepViewModel}">
        <views:LoginStepView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type viewModel:FinishedStepViewModel}">
        <views:FinishedStepView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type viewModel:LoginControlViewModel}">
        <views:LoginControlView/>
    </DataTemplate>
</ResourceDictionary>